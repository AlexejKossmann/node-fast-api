{
  "name": "node-fast-api",
  "version": "0.1.0",
  "description": "A boilerplate for starting API with Node, Express and Typescript.",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc -p .",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run dev\""
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "api"
  ],
  "author": "Alexej Kossmann",
  "license": "GNU GPLv3",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/js-yaml": "^3.12.4",
    "@types/mongodb": "^3.5.17",
    "@types/node": "^14.0.1",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "mongodb": "^3.5.7"
  }
}
